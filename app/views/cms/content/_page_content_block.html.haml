- id = page_content_block.id
%a{:name => id}
%div{:class => 'page_content_block', :id => "page_content_block_#{id}"}
  = delete_link("page_content_block_#{id}", cms_admin_page_content_block_path(id))
  = edit_link("page_content_block_#{id}", edit_cms_admin_page_content_block_path(id))
  = sort_field(id,page_content_block.position)
  .clear
  .title= page_content_block.title  unless page_content_block.title.blank? 
  .content
    = image_tag page_content_block.photo.url, :class => 'content_image' if page_content_block.photo.file?
    = page_content_block.text